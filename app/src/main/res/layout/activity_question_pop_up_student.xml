<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/question_popup_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/question_background"
    tools:context=".Student.StudentLesson">


    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="444dp"
        android:layout_marginTop="135dp"
        android:text="Options:"
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="271dp"
        android:layout_marginTop="27dp"
        android:text="Question:"
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/que_pop_question_student"
        android:layout_width="706dp"
        android:layout_height="64dp"
        android:layout_alignTop="@+id/textView21"
        android:layout_toEndOf="@+id/textView21"
        android:textAlignment="textStart"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="536dp"
        android:layout_height="384dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="102dp"
        android:layout_marginTop="175dp"
        android:orientation="vertical">


        <RadioGroup
            android:id="@+id/que_pop_stud_radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RadioButton
                android:id="@+id/que_pop_stud_opt1"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/background_dark" />

            <RadioButton
                android:id="@+id/que_pop_stud_opt2"
                android:layout_width="501dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/background_dark" />

            <RadioButton
                android:id="@+id/que_pop_stud_opt3"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/background_dark" />

            <RadioButton
                android:id="@+id/que_pop_stud_opt4"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/background_dark" />

            <RadioButton
                android:id="@+id/que_pop_stud_opt5"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/background_dark" />

            <RadioButton
                android:id="@+id/que_pop_stud_opt6"
                android:layout_width="503dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/background_dark" />

        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/que_pop_stud_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView41"
        android:layout_marginBottom="34dp"
        android:background="@android:color/holo_purple"
        android:text="SUBMIT"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/que_pop_stud_timer"
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/que_pop_stud_submit"
        android:layout_toEndOf="@+id/textView7"
        android:textColor="@android:color/background_dark"
        android:textSize="55sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/que_pop_stud_submit"
        android:layout_alignParentStart="true"
        android:layout_marginStart="64dp"
        android:text="Time:"
        android:textColor="?android:attr/colorSecondary"
        android:textSize="55sp"
        android:textStyle="bold" />


</RelativeLayout>